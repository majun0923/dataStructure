class Solution {
    public void rotate(int[][] matrix) {
        int n = matrix.length;
		//矩阵转置，即按斜对角线进行数据交换
		for(int i=0;i<n;i++){
			for(int j=i;j<n;j++){
				int temp = matrix[i][j];
				matrix[i][j] = matrix[j][i];
				matrix[j][i] = temp;
			}
		}

		//矩阵根据中间列进行对折，得到最终结果
		for(int i=0;i<n;i++){
			for(int j=0;j<n/2;j++){
				int temp = matrix[i][j];
				matrix[i][j] = matrix[i][n-j-1];
				matrix[i][n-j-1] = temp;
			}
		}

    }
}